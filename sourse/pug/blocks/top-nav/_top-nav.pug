										.mb-2
											+soc()
										.col-auto
											+e.text
												+icon("clock")
												| пн-пт: 9.00 - 18.00
												
										.mb-2
											+e.text(href="mailto:zakaz@ya-muzykant.ru")
												+icon("email")

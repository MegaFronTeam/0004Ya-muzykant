mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			.row.roww
				.col-lg-auto.col
					+e.logo(href="#")
						img(src="img/logo.png", alt="")
				.col-lg.order-lg-0.order-first
					+b.search-block
						form
							input.form-control(type="text" placeholder="Поиск")
							button 
								+icon("search")
				.col-auto
					+e.link(href="#")
						+e.icon-wrap: +icon('person') 
						+e.link-caption.d-none.d-sm-block Войти
				.col-auto
					+e.link(href="#")
						+e.icon-wrap: +icon('like') 
						+e.link-caption.d-none.d-sm-block Избранное
				.col-auto
					+e.link(href="#")
						+e.icon-wrap: +icon('cart') 
						+e.link-caption.d-none.d-sm-block Корзина
				+e.col.col-12
				.col-lg-auto.col
					+b.catalog-block
						+e.toggle(href="#")
							+e.gumburger
								span
							| Каталог


				.col-lg.order-lg-0.order-last
					.menu-mobile.menu-mobile--js
						.menu-mobile__inner
							+menu-toggle()
							+mnu()
							+b.topLine.d-lg-none
